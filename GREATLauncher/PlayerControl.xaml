<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" x:Class="GREATLauncher.PlayerControl"
	d:DesignWidth="200" d:DesignHeight="30"
    MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave">
	<Grid Margin="5,3">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="auto"/>
		</Grid.ColumnDefinitions>

		<Label x:Name="usernameLabel" Content="Username" HorizontalAlignment="Left"/>
		<Ellipse x:Name="statusEllipse" Stroke="#FF1CEBFF" Width="15" Height="15" Margin="3" Grid.Column="2"/>
	</Grid>
</UserControl>