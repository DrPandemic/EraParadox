<inputCollection>
    <keyboardInputs>
        <input action="Jump" key="W" state="Pressed" />
        <input action="GoRight" key="D" state="Down" />
        <input action="GoLeft" key="A" state="Down" />
        <!--<input action="Jump" key="W" state="Pressed" deadKey="Shift" />
        <input action="GoRight" key="D" state="Down" deadKey="Shift" />
        <input action="GoLeft" key="A" state="Down" deadKey="Shift" />-->
        
        <input action="ArrowUp" key="Up" state="Released" />
        <input action="ArrowDown" key="Down" state="Released" />
        <input action="ArrowLeft" key="Left" state="Released" />
        <input action="ArrowRight" key="Right" state="Released" />
        <input action="Enter" key="Enter" state="Released" />
        <input action="EnterPressed" key="Enter" state="Pressed" />
        <input action="Escape" key="Escape" state="Released" />
    </keyboardInputs>
    <MouseInputs>
        <input action="Spell1" key="Left" state="Pressed" sensitive="true" />
        <input action="Spell2" key="Right" state="Pressed" sensitive="true"/>
        <input action="Spell3" key="Left" state="Pressed" deadKey="Shift" sensitive="true"/>
        <input action="Spell4" key="Right" state="Pressed" deadKey="Shift" sensitive="true"/>
        <input action="LeftClick" key="Left" state="Released" sensitive="true"/>
        <input action="LeftPressed" key="Left" state="Pressed" sensitive="true"/>
        <input action="RightClick" key="Right" state="Released" sensitive="true"/>
    </MouseInputs>
</inputCollection>